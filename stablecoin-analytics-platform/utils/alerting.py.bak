"""
Alerting Module (backup)
Previously sent alerts to Slack; now it logs alerts only.
"""

import logging

logger = logging.getLogger(__name__)


def send_alert(message: str, severity: str = 'warning'):
    """
    Log an alert message with severity. No external notifications.
    """
    level_map = {
        'info': logging.INFO,
        'warning': logging.WARNING,
        'error': logging.ERROR,
        'critical': logging.CRITICAL,
    }
    logger.log(level_map.get(severity, logging.WARNING), message)
